{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "admin/**/*", "use": "@vercel/static" },
    { "src": "components/**/*", "use": "@vercel/static" },
    { "src": "images/**/*", "use": "@vercel/static" },
    { "src": "pages/**/*", "use": "@vercel/static" },
    { "src": "scripts/**/*", "use": "@vercel/static" },
    { "src": "styles/**/*", "use": "@vercel/static" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)\\.(css|js|mjs|cjs|svg|png|jpg|jpeg|gif|webp|ico|ttf|otf|woff|woff2|eot)",
      "headers": [
        { "key": "Cache-Control", "value": "public,max-age=43200,immutable" }
      ]
    }
  ]
}
